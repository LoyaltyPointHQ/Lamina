{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "StorageType": "Filesystem",
  "MetadataStorageType": "Sql",
  "FilesystemStorage": {
    "DataDirectory": "/tmp/lamina/data",
    "MetadataMode": "SeparateDirectory"
  },
  "SqlStorage": {
    "Provider": "PostgreSQL",
    "ConnectionString": "Host=localhost;Database=lamina;Username=lamina;Password=lamina",
    "MigrateOnStartup": true,
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": true
  },
  "MultipartUploadCleanup": {
    "Enabled": true,
    "CleanupIntervalMinutes": 60,
    "UploadTimeoutHours": 24
  },
  "MetadataCleanup": {
    "Enabled": true,
    "CleanupIntervalMinutes": 120,
    "BatchSize": 1000
  }
}