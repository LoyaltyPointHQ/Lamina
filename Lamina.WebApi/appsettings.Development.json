{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "FilesystemStorage": {
    "DataDirectory": "/tmp/lamina",
    "MetadataMode": "Inline"
  },
  "Authentication": {
    "Enabled": true,
    "Users": [
      {
        "AccessKeyId": "admin",
        "SecretAccessKey": "admin123",
        "Name": "admin",
        "BucketPermissions": [
          {
            "BucketName": "*",
            "Permissions": [ "*" ]
          }
        ]
      }
    ]
  },
  "AutoBucketCreation": {
    "Enabled": true,
    "Buckets": [
      {
        "Name": "dev-bucket",
        "Description": "Development bucket created automatically",
        "Tags": {
          "Environment": "Development",
          "CreatedBy": "AutoBucketCreation"
        }
      }
    ]
  }
}
